{
  "extends": ["config:js-lib", "group:all"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "postUpgradeTasks": {
    "executionMode": "update",
    "commands": ["yarn build"],
    "fileFilters": ["**/dist/**/*.js"]
  },
  "lockFileMaintenance": { "enabled": true, "automerge": true },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    }
  ]
}
